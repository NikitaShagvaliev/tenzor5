<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InputText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textColorHint">#C5C5C5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ReceiverText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/input_text_size</item>
    </style>

    <style name="ActionButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_color</item>
    </style>
</resources>
